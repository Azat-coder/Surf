            li.breadcrumbs__item 
              a(href="#") Каталог
            li.breadcrumbs__item(id='breadcrumbs-current') 
              a(href="#") Доски
          button.catalog__filter
        .catalog__sortblock 
          .catalog__sortby
            .select.unselectable(name='sortby') Упорядочить
              span.changing-text по цене
            .option-list.visually-hidden 
              .option.option--colored(value='value1', selected)
                .option-text По цене
                .option-image
              .option(value='value2')
                .option-text По названию
                .option-image
              .option(value='value3')
                .option-text По популярности
                .option-image 
          .catalog__sortbycount
            .select.unselectable(name='sortbycount') Показать по
              span.changing-text 10
            .option-list.visually-hidden
              .option(value='value1', selected) 10
              .option(value='value2') 20
              .option(value='value3') 50
      .catalog__goodsblock 
        form(action='' method='POST').params 
          h3.params__title Параметры
          .params__price.price
            .price__titleblock 
              p.price__title Цена
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.99997 15.7002C9.64153 15.7002 9.28314 15.5634 9.00986 15.2902L0.410313 6.6906C-0.13673 6.14356 -0.13673 5.25662 0.410313 4.7098C0.957135 4.16298 1.8439 4.16298 2.39098 4.7098L9.99997 12.3192L17.609 4.71007C18.1561 4.16324 19.0427 4.16324 19.5895 4.71007C20.1368 5.25689 20.1368 6.14382 19.5895 6.69087L10.9901 15.2905C10.7167 15.5637 10.3583 15.7002 9.99997 15.7002Z" fill="#C4C4C4"/>
              </svg>
            .price__inputblock 
              input(type='text' name='min-price' value='' id='input-0')
              #textnode -
              input(type='text' name='max-price' value='' id='input-1')
            .price__rangeslider#range-slider
          .params__brand.brand
            .brand__titleblock
              p.brand__title Бренд
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.99997 15.7002C9.64153 15.7002 9.28314 15.5634 9.00986 15.2902L0.410313 6.6906C-0.13673 6.14356 -0.13673 5.25662 0.410313 4.7098C0.957135 4.16298 1.8439 4.16298 2.39098 4.7098L9.99997 12.3192L17.609 4.71007C18.1561 4.16324 19.0427 4.16324 19.5895 4.71007C20.1368 5.25689 20.1368 6.14382 19.5895 6.69087L10.9901 15.2905C10.7167 15.5637 10.3583 15.7002 9.99997 15.7002Z" fill="#C4C4C4"/>
              </svg>
            ul.brand__list
              each brand in brands
                li.brand__item
                  input.visually-hidden.brand__item-radio(
                    type='radio',
                    name='brand', 
                    value=brand.name, 
                    id=`brand-${brand.name}`,
                    checked=brand.checked)
                  label(for=`brand-${brand.name}`) #{brand.name}
          .params__color.color
            .color__titleblock
              p.color__title Цвет
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.99997 15.7002C9.64153 15.7002 9.28314 15.5634 9.00986 15.2902L0.410313 6.6906C-0.13673 6.14356 -0.13673 5.25662 0.410313 4.7098C0.957135 4.16298 1.8439 4.16298 2.39098 4.7098L9.99997 12.3192L17.609 4.71007C18.1561 4.16324 19.0427 4.16324 19.5895 4.71007C20.1368 5.25689 20.1368 6.14382 19.5895 6.69087L10.9901 15.2905C10.7167 15.5637 10.3583 15.7002 9.99997 15.7002Z" fill="#C4C4C4"/>
              </svg>
            ul.color__list
              each color in colors
                li.color__item
                  input.visually-hidden.color__item-radio(type='radio',
                    name='color', 
                    value=color.name, 
                    id=`color-${color.name}`,
                    checked=color.checked)
                  label(for=`color-${color.name}`) #{color.name}
          .params__availability.availability
            .availability__titleblock
              p.availability__title Наличие
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.99997 15.7002C9.64153 15.7002 9.28314 15.5634 9.00986 15.2902L0.410313 6.6906C-0.13673 6.14356 -0.13673 5.25662 0.410313 4.7098C0.957135 4.16298 1.8439 4.16298 2.39098 4.7098L9.99997 12.3192L17.609 4.71007C18.1561 4.16324 19.0427 4.16324 19.5895 4.71007C20.1368 5.25689 20.1368 6.14382 19.5895 6.69087L10.9901 15.2905C10.7167 15.5637 10.3583 15.7002 9.99997 15.7002Z" fill="#C4C4C4"/>
              </svg>
            ul.availability__list
              each availability in availabilities
                li.availability__item
                  input.visually-hidden.availability__item-radio(type='radio',
                    name='availability', 
                    value=availability.name, 
                    id=`availability-${availability.name}`,
                    checked=availability.checked)
                  label(for=`availability-${availability.name}`) #{availability.name} 
          button.params__show.btn Показать
          button.params__clear Очистить
        .catalog-goods 
          ul.catalog-goods__goods-list
            each item in goods  
              li
                a.goods-item(href=item.href) 
                  img(src=`@img/goods/${item.image}`, alt=item.title)
                  h4.goods-item__title #{item.title}
                  p.goods-item__price #{item.price}
                  button.goods-item__btn.btn.btn--quickview Купить
          .pagination
            ul.pagination__list
              li(id='pagination-current')
                a(href="#") 1
              li 
                a(href="#") 2
              li 
                a(href="#") 3
              li 
                a(href="#") ...
              li 
                a(href="#") 9

