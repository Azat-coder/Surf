- 
  const navItems = [
    {
      name: 'Каталог',
      href: '/catalog'
    },
    {
      name: 'О нас',
      href: '/catalog'
    },
    {
      name: 'Блог',
      href: '/catalog'
    },
    {
      name: 'Туры',
      href: '/catalog'
    }]
- const controls = ['login','cart']

header.header 
  .container
    h2.visually-hidden Шапка сайта
    .header__logo.logo
      picture 
        source(media="(max-width: 768px)", srcset="@img/surf-logo-small.svg")  
        img.logo__image(src="@img/surf-logo.svg", alt="Наш логотип")
    nav.header__nav.nav
      ul.nav__list.nav__list-main
        each navItem in navItems
          li.nav__item 
            a.nav__link(href=navItem.href) #{navItem.name}
    ul.header__controls.controls 
      each control in controls 
        li.control 
          a.control__link(href=`/${control}`)
            img(src=`img/${control}.svg`, alt=`${control} button`) 
    button.header__hamburger.hamburger
