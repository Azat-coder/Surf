section.product-description
  .container
    .product-description__inner
      h2.visually-hidden Каталог товаров 
      .product-description__controls 
        .product-description__breadcrumbs.breadcrumbs
          ul.breadcrumbs__list
            li.breadcrumbs__item.breadcrumbs__item-home
              a(href="#")
